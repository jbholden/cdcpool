         td(id="link-bar-label") 
            a(id="link-bar-week-link",href="/#{year}/week/#{page_week_number}/results") WEEK
         - for (var week_number=1; week_number <= num_weeks; week_number++)
            td(id="link-bar-week-number")
               if week_number == page_week_number
                  a(id="link-bar-week-number-highlight",href="/#{year}/week/#{week_number}/player/#{player_id}/results") #{week_number}
               else
                  a(id="link-bar-week-number-link",href="/#{year}/week/#{week_number}/player/#{player_id}/results") #{week_number}
